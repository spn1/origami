{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "node": true,
        "es6": true,
        "browser": true
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "semi": 2,
        "react/prop-types": 0,
        "react/jsx-indent": [2, 2],
        "react/jsx-indent-props": [2, 2],
        "react/jsx-curly-spacing": [2, {"when": "never", "allowMultiline": false}],
        "jsx-quotes": ["error", "prefer-single"],
        "no-trailing-spaces": 2,
        "eol-last": 2
    }
}